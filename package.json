{
  "name": "storylofts-contenthive-api",
  "version": "1.0.0",
  "description": "StoryLofts ContentHive Backend API - Video platform for professionals",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "deploy:staging": "npm run build && echo 'Deploy to staging'",
    "deploy:production": "npm run build && echo 'Deploy to production'",
    "db:setup": "node scripts/setup-database.js",
    "secrets:setup": "node scripts/setup-secrets.js",
    "docker:build": "docker build -t storylofts-api .",
    "docker:run": "docker run -p 3000:3000 storylofts-api"
  },
  "keywords": [
    "storylofts",
    "video",
    "content",
    "api",
    "platform",
    "professionals",
    "upload",
    "streaming"
  ],
  "author": "StoryLofts Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nsr-compute/storylofts-backend.git"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^5.0.1",
    "backblaze-b2": "^1.7.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-jwt": "^8.4.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jwks-rsa": "^3.1.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
